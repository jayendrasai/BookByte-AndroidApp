<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/skin"
    tools:context=".MainActivity">

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".BookDetailFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:id="@+id/barlayout"
        >

        <ImageView
            android:id="@+id/logo"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:scaleType="centerCrop"
            android:src="@drawable/owlonly" />

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_toEndOf="@+id/logo"
            android:fontFamily="sans-serif-condensed-light"
            android:text="BOOK BYTE"
            android:textColor="@color/blue"
            android:layout_marginLeft="25dp"
            android:textSize="35sp" />

        <ImageButton
            android:id="@+id/profilebtn"
            android:layout_width="50dp"
            android:layout_height="45dp"
            android:src="@drawable/account"
            android:contentDescription="Search"
            android:layout_toEndOf="@id/title"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless"

            android:layout_marginLeft="25dp"
            />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/booknamelayout"
        android:layout_below="@+id/barlayout"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name:"
        android:textSize="18sp"
        android:fontFamily="sans-serif"
        />

        <TextView
            android:id="@+id/bookname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Book Name"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/booknamelayout"
        android:id="@+id/Authornamelayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author:"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/authorname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Author Name"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Genrenamelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Authornamelayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre:"
            android:textSize="18sp"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/genreid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Genre Name"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/yearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Genrenamelayout"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year:"
            android:textSize="18sp"

            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/yearid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Year Name"
            android:textSize="25sp"
            android:fontFamily="sans-serif-condensed-medium"
            />
    </LinearLayout>


        <TextView
            android:id="@+id/desclayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/yearlayout"
            android:text="Description:"
            android:textSize="17sp"
            android:fontFamily="sans-serif"
            />

        <TextView
            android:id="@+id/descid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/desclayout"
            android:text="Year Namedsgdfgfgffffffffffffffffffffffgfgfgfhgdhrdgggggggggggggggddddddddddddddddddddddddddddddddddddddddddddddddddddddddddrdgfdgdfgdfgfgfggdggfdg"
            android:textSize="23sp"
            android:fontFamily="sans-serif-condensed"
            />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/downloadlayout"
        android:layout_below="@+id/descid"
        android:gravity="center"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Download as PDF"
        android:id="@+id/downloadbtn"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="18sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:backgroundTint="@color/blue"
        android:textColor="@color/white"
        />
    </LinearLayout>





</RelativeLayout>
</ScrollView>