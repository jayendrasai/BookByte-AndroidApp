<!--        android:label="filterBookFragment" >-->
<!--        <action-->
<!--            android:id="@+id/action_filterBookFragment_to_bookDetailFragment"-->
<!--            app:destination="@id/bookDetailFragment" />-->
<!--    </fragment>-->
    <fragment
        android:id="@+id/filterBookFragment"
        android:name="com.example.myapp.filterBookFragment"
        android:label="filterBookFragment">
        <action
            android:id="@+id/action_filterBookFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.myapp.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_bookDetailFragment"
            app:destination="@id/bookDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addBookFragment"
        android:name="com.example.myapp.AddBookFragment"
        android:label="fragment_add_book"
        tools:layout="@layout/fragment_add_book" >
        <action
            android:id="@+id/action_addBookFragment_to_homeScreenFragment2"
            app:destination="@id/homeScreenFragment2" />
    </fragment>
    <fragment
        android:id="@+id/accountDetailFragment"
        android:name="com.example.myapp.AccountDetailFragment"
        android:label="fragment_account_detail"
        tools:layout="@layout/fragment_account_detail" >
        <action
            android:id="@+id/action_accountDetailFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
</navigation>